                <Expander Width="70" FontSize="10" Header="AutoSave">
                    <StackPanel>
                        <RadioButton Name="AutoSaveOn_RB" Content="ON" Checked="AutoSaveOn_RB_Checked" ></RadioButton>
                        <RadioButton Name="AutoSaveOff_RB" Content="OFF" Checked="AutoSaveOff_RB_Checked"></RadioButton>
                    </StackPanel>
                </Expander>
                <Button Name="Cut_Btn"
                        Margin="7"
                        Width="50"
                        Height="30"
                        Content="Cut"
                        Background="#00A568"
                        Foreground="White"
                        BorderThickness="0">
                </Button>
                <Button Name="Copy_Btn" 
                        Margin="7"  
                        Width="50" 
                        Height="30"
                        Content="Copy"
                        Background="#00A568"
                        Foreground="White"
                        BorderThickness="0">
                </Button>
                
                <Button Name="Paste_Btn"  
                        Margin="7"  
                        Width="50" 
                        Height="30"
                        Content="Paste"
                        Background="#00A568"
                        Foreground="White"
                        BorderThickness="0">
                </Button>
                <Button Name="SelectAll_Btn"  
                        Margin="7"  
                        Width="60" 
                        Height="30" 
                        Content="Select All" 
                        Background="#00A568" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Click="SelectAll_Btn_Click"
                        >
                </Button>
                <Label Name="Error_Label" Margin="3,7,0,7" Height="60" Width="200" Visibility="Visible"  Foreground="Red"></Label>
                
                
            </WrapPanel>
            
