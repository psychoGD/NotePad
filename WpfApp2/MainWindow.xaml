                         Width="100" 
                         Height="30" 
                          
                         IsEnabled="False"
                         >
                    <TextBox.ToolTip>
                        <ToolTip Content="Path" Foreground="Aqua" ></ToolTip>
                    </TextBox.ToolTip>
                </TextBox>
